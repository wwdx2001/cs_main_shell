<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_5"
    android:layout_marginLeft="@dimen/padding_left_10"
    android:layout_marginRight="@dimen/padding_right_10"
    android:layout_marginTop="@dimen/margin_5"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_apk_image"
            android:layout_width="@dimen/height_50"
            android:layout_height="@dimen/width_50"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_apk_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_apk_image"
            android:layout_margin="4dp"
            android:layout_toRightOf="@+id/iv_apk_image"
            android:singleLine="true"
            android:text="名称"
            android:textSize="@dimen/text_size_xlarge"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_install"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:singleLine="true"
            android:text="安装"
            android:textColor="@color/text_content"
            android:textSize="10dp" />

        <ProgressBar
            android:id="@+id/pb_install"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:max="100"
            android:singleLine="true"
            android:textColor="@color/text_content"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv_apk_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_apk_image"
            android:layout_alignLeft="@+id/tv_apk_name"
            android:layout_alignRight="@+id/tv_apk_name"
            android:singleLine="true"
            android:text="V1.0"
            android:textSize="@dimen/text_size_xlarge" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

