<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/elevation_4"
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_marginRight="@dimen/margin_10"
    android:layout_marginTop="@dimen/margin_10"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/radius_6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_8"
        android:paddingTop="@dimen/padding_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_10">

            <TextView
                android:id="@+id/search_result_cebenhao"
                style="@style/card_head_style"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1234" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/card_head_style"
                android:text="@string/search_result_separator" />

            <TextView
                android:id="@+id/search_result_ceneixuhao"
                android:layout_width="wrap_content"
                style="@style/card_head_style"
                android:layout_height="match_parent"
                android:text="1234567" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/marginTop_5"
            android:background="#d2d2d2"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/card_content_style"
                android:text="@string/text_view_hu_ming" />

            <TextView
                android:id="@+id/search_result_tv_hu_ming"
                android:layout_width="wrap_content"
                style="@style/card_content_style"
                android:layout_height="match_parent" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/card_content_style"
                android:text="@string/text_view_address" />

            <TextView
                android:id="@+id/search_result_tv_address"
                android:layout_width="wrap_content"
                style="@style/card_content_style"
                android:layout_height="match_parent" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/card_content_style"
                android:text="@string/text_view_table_number" />

            <TextView
                android:id="@+id/search_result_table_number"
                android:layout_width="wrap_content"
                style="@style/card_content_style"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/card_content_style"
                android:text="@string/text_view_table_gyh" />

            <TextView
                android:id="@+id/search_result_table_gyh"
                android:layout_width="wrap_content"
                style="@style/card_content_style"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>