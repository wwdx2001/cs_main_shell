<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">

    <android.support.v7.widget.CardView
        android:id="@+id/fs_cardview"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="@dimen/radius_0"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_50"
        android:layout_marginEnd="@dimen/marginRight_10"
        android:layout_marginLeft="@dimen/marginLeft_10"
        android:layout_marginRight="@dimen/marginRight_10"
        android:layout_marginStart="@dimen/marginLeft_10"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_apk_install"
                android:layout_width="@dimen/width_30"
                android:layout_height="@dimen/height_30"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/marginLeft_10"
                android:layout_marginStart="@dimen/marginLeft_10"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/ic_btn_qianfeixx"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_component_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/marginLeft_10"
                android:layout_marginStart="@dimen/marginLeft_10"
                android:layout_toEndOf="@id/iv_apk_install"
                android:layout_toRightOf="@id/iv_apk_install"
                android:text="@string/title_apk_install"
                android:textSize="@dimen/text_size_xlarge" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/marginRight_10"
                android:layout_marginRight="@dimen/marginRight_10"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/ic_next2" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1"
        android:layout_marginEnd="@dimen/marginRight_10"
        android:layout_marginLeft="@dimen/marginLeft_10"
        android:layout_marginRight="@dimen/marginRight_10"
        android:layout_marginStart="@dimen/marginLeft_10"
        android:background="@color/divider_line"/>

</LinearLayout>